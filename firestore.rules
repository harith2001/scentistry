rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/roles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'owner';
    }

    // Public catalog read
    match /products/{id} {
      allow read: if true;
      allow write: if isOwner();
    }

    // Each user can read/write their own cart
    match /carts/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Orders: anyone can create (guest checkout), owners manage; users read their own
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isOwner() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow update, delete: if isOwner();
    }

    // Profiles:
    // - Owners: full read/write/delete for admin Customers module (list and manage users)
    // - Users: can read/write their own profile (self-service)
    match /profiles/{uid} {
      // Read allowed for owner or the user
      allow read: if isOwner() || (request.auth != null && request.auth.uid == uid);

      // Updates/deletes allowed for owner
      allow update, delete: if isOwner();

      // Create/update allowed for the user themself (common fields)
      allow create, write: if request.auth != null && request.auth.uid == uid;
    }

    // Roles: readable by owner or the user; no client writes
    match /roles/{uid} {
      allow read: if isOwner() || (request.auth != null && request.auth.uid == uid);
      allow write: if false;
    }

    // Analytics: only owner can read; writes via Admin SDK only
    match /analytics/{doc} {
      allow read: if isOwner();
      allow write: if false;
    }

    // Counters: server-side only (Admin SDK); block client writes, allow owner read
    match /counters/{docId} {
      allow read: if isOwner();
      allow write: if false;
    }
  }
}